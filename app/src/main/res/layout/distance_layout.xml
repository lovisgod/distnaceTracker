<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:tint="@color/grey"
        app:srcCompat="@drawable/ic_remove_black_24dp"
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:text="You Covered"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/remove"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAppearance="?textAppearanceHeadline6"
        android:layout_width="wrap_content"
        android:id="@+id/header_tv"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAppearance="?textAppearanceHeadline4"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:id="@+id/distance_convered"
        android:textStyle="bold|italic"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/header_tv"
        app:layout_constraintLeft_toRightOf="@+id/header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="5623.324M" />

    <TextView
        android:id="@+id/time"
        app:layout_constraintTop_toBottomOf="@id/distance_convered"
        app:layout_constraintLeft_toLeftOf="@id/distance_convered"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        tools:text="in 40s"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>